@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Http
@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    var isAuthenticated = User.Identity.IsAuthenticated;
    var username = User.Identity.Name;
    var role = User.FindFirst(ClaimTypes.Role)?.Value;
    var name = User.FindFirst("FullName")?.Value ?? username;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Imoteka Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomeManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" />
    <script>
        AOS.init();
    </script>
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Imoteka Hub</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <form asp-controller="Search" asp-action="List" method="get" id="searchForm" class="d-flex align-items-center" >
                                <input type="text" id="searchInput" class="form-control me-2" placeholder="Search homes or users..." autocomplete="off" autocorrect="off" autocapitalize="off" spellcheck="false" name="query" />
                                <button  class="btn btn-homemanager" type="submit">Search</button>
                            </form>
                            <div id="searchResults" style="position:absolute; z-index: 1000; background:#fff; width:250px;"></div>
                            
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Search" asp-action="AdvancedSearchList" class="btn btn-homemanager">Filtered Search</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item dropdown position-relative">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="mainMenuDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu
                                <span id="menu-exclamation" style="display:none; position:absolute; top:2px; right:-10px;">
                                    <i class="fas fa-exclamation-circle text-danger" style="font-size:1.1em;"></i>
                                </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="mainMenuDropdown">
                                <li><a class="dropdown-item" asp-controller="Homes" asp-action="Index">Homes</a></li>
                                @if (isAuthenticated)
                                {
                                   
                                    <li><a class="dropdown-item position-relative" asp-controller="Conversation" asp-action="Index">
                                        Conversations
                                        <span id="unread-badge" class="badge bg-danger ms-2" style="display:none;">0</span>
                                    </a></li>
                                    <li><a class="dropdown-item" href="/User/Profile" onclick="window.location='/User/Profile';">My Profile</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin Panel</a></li>
                                        <li><a class="dropdown-item" asp-controller="Homes" asp-action="MyProperties">My Properties</a></li>
                                        <li><a class="dropdown-item" asp-controller="Homes" asp-action="Index">All Properties</a></li>
                                    }
                                    else if (User.IsInRole("Landlord"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Homes" asp-action="MyProperties">My Properties</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Logout</a></li>
                                }
                                else
                                {
                                    
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Login">Login</a></li>
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Register">Register</a></li>
                                }
                            </ul>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item d-flex align-items-center ms-2">
                                <span class="nav-link text-dark">
                                    Hello, @username (@name)
                                    @if (User.IsInRole("User"))
                                    {
                                        <span style="color:forestgreen">(@role)</span>
                                    }
                                    else if (User.IsInRole("Admin"))
                                    {
                                        <span style="color:red">(@role)</span>
                                    }
                                    else if (User.IsInRole("Landlord"))
                                    {
                                        <span style="color:dodgerblue">(@role)</span>
                                    }
                                </span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div id="notification-area" class="position-fixed top-0 end-0 p-3" style="z-index:1050;"></div>
    <div class="container mt-auto">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-12 text-left my-2">
                   
                    <a href="https://facebook.com/yourpage" target="_blank" rel="noopener" class="mx-2 text-decoration-none social-icon">
                        <i class="fab fa-facebook fa-2x"></i>
                    </a>
                    <a href="https://twitter.com/yourprofile" target="_blank" rel="noopener" class="mx-2 text-decoration-none social-icon">
                        <i class="fab fa-twitter fa-2x"></i>
                    </a>
                    <a href="https://linkedin.com/in/yourprofile" target="_blank" rel="noopener" class="mx-2 text-decoration-none social-icon">
                        <i class="fab fa-linkedin fa-2x"></i>
                    </a>
                </div>
                <div class="col-12 text-center">
                    &copy; 2025 - Imoteka Hub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAJ9L4-eFlTuD7QWvoLbEkUb6d0LA6Bmmk"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/SearchEngine.js"></script>
   <script src="~/js/chatbox.js"></script>
    <script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@1.6.2/index.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <div id="imageModal" style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.8);z-index:2000;align-items:center;justify-content:center;">
    <span style="position:absolute;top:24px;right:32px;font-size:2em;color:#fff;cursor:pointer;" onclick="closeImageModal()">&times;</span>
    <img id="modalImage" src="" style="max-width:90vw;max-height:90vh;transition:transform 0.3s;cursor:zoom-in;border-radius:12px;position:absolute;top:50%;left:50%;transform:translate(-50%,-50%) scale(1);" onclick="toggleZoom()" />
</div>
<script>
    function openImageModal(src) {
        console.log("openImageModal called with src:", src);
        const modal = document.getElementById("imageModal");
        const modalImg = document.getElementById("modalImage");
        if (!modalImg) {
            console.error("modalImg not found in DOM");
            return;
        }
        modalImg.src = src;
        modalImg.style.transform = "translate(-50%,-50%) scale(1)";
        modal.style.display = "flex";
    }
    function closeImageModal() {
        document.getElementById("imageModal").style.display = "none";
    }
    function toggleZoom() {
        const modalImg = document.getElementById("modalImage");
        if (modalImg.style.transform.includes("scale(1)")) {
            modalImg.style.transform = "translate(-50%,-50%) scale(2.2)";
        } else {
            modalImg.style.transform = "translate(-50%,-50%) scale(1)";
        }
    }
    window.openImageModal = openImageModal;
    window.closeImageModal = closeImageModal;
    window.toggleZoom = toggleZoom;
</script> 
</body>
</html>
