@model HomeManager.Data.Data.Dtos.RegisterUserDto
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg p-4" style="min-width: 350px; max-width: 450px; width: 100%;">
        <div class="text-center mb-4">
            <span class="display-4" style="color: #4e54c8;">
                <i class="bi bi-person-plus"></i>
            </span>
            <h2 class="fw-bold mb-0" style="color: #4e54c8;">Register</h2>
            <p class="text-muted small">Create your HomeManager account</p>
        </div>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Choose a username" autocomplete="username" id="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Your full name" id="FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Phone number" autocomplete="tel" id="PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Your email address" autocomplete="email" id="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" autocomplete="new-password" id="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input id="ConfirmPassword" name="ConfirmPassword" class="form-control" type="password" placeholder="Repeat your password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-homemanager btn-lg">Register</button>
            </div>
        </form>
        <div class="mt-3 text-center">
            <span class="text-muted">Already have an account?</span>
            <a asp-controller="Auth" asp-action="Login" class="text-decoration-none" style="color: #4e54c8;">Login</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}