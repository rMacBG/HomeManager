@using HomeManager.Data.Data.Models.Enums
@model HomeManager.Data.Data.Dtos.CreateHomeDto
<form asp-action="Create" method="post" enctype="multipart/form-data" class="create-form-animate">
    <div class="form-floating-label">
        <input asp-for="HomeName" class="form-control" placeholder=" " />
        <label asp-for="HomeName"></label>
    </div>
    <div class="form-floating-label">
        <textarea asp-for="HomeDescription" class="form-control" placeholder="Description"></textarea>
    </div>
    <div class="form-floating-label">
        <input asp-for="HomeLocation" class="form-control" placeholder="Address" />
    </div>
    <div class="mb-3">
        <label for="Region" class="form-label">Region</label>
        <input type="text" class="form-control" id="Region" name="Region" required />
    </div>
    <div class="mb-3">
        <label for="City" class="form-label">City/Town</label>
        <input type="text" class="form-control" id="City" name="City" required />
    </div>
    <div class="form-floating-label">
        <input asp-for="HomePrice" class="form-control" placeholder="Price" />
    </div>
    <div class="form-group mb-3">
        <div class="form-group">
            <label asp-for="HomeType" class="control-label"></label>
            
            <select asp-for="HomeType" class="form-control" asp-items="Html.GetEnumSelectList<HomeType>()">
                <option value="">Select Home Type</option>
            </select>
        </div>
        <span asp-validation-for="HomeType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HomeDealType" class="control-label"></label>
        <select asp-for="HomeDealType" class="form-control" asp-items="Html.GetEnumSelectList<DealType>()">
            <option value="">Select Deal Type</option>
        </select>

        <span asp-validation-for="HomeDealType" class="text-danger"></span>
    </div>
    <input asp-for="HomeLocation" class="form-control" placeholder="Google Maps Link or Coordinates" />

    <div class="form-group">
        <label for="UploadedImages">Upload Images</label>
        <input type="file" name="UploadedImages" multiple class="form-control" id="UploadedImages" />
        <div id="imagePreview" class="d-flex flex-wrap mt-2"></div>
    </div>
    <button type="submit" class="btn btn-hm">Create Listing</button>
</form>
