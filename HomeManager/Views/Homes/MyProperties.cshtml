@model IEnumerable<HomeManager.Data.Data.Dtos.HomeDto>

<h2>My Properties</h2>

<a asp-action="Create" class="btn btn-primary">+ Add New Property</a>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Type</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var home in Model)
            {
                <tr>
                    <td>@home.HomeName</td>
                    <td>@home.HomeDealType</td>
                    <td>@home.HomePrice</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@home.Id">Details</a>
                        <a asp-action="Edit" asp-route-id="@home.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@home.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have not listed any properties yet.</p>
}
