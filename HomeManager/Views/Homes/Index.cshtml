@model ICollection<HomeManager.Data.Data.Dtos.HomeDto>

<h2>Available Homes</h2>
@if (Model != null && Model.Any())
{
    var index = 0;
    foreach (var home in Model)
    {
        var imagePath = (home.Images != null && home.Images.Any())
            ? home.Images.First().FilePath
            : "/images/placeholder.png";
        <div class="card mb-3 home-card" style="min-height: 180px;">
            <div class="d-flex" style="height: 180px;">
                <div class="d-flex flex-column justify-content-between flex-grow-1 p-3">
                    <h5>@home.HomeName</h5>
                    <p>@home.HomeDescription</p>
                    <div class="d-flex align-items-center mb-1" style="gap: 0.0rem;">
                        <span class="badge bg-warning text-dark fw-bold">
                            <i class="fa fa-tag me-1"></i> @home.HomePrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))
                        </span>
                        <span class="badge bg-primary">
                            <i class="fa fa-map-marker-alt me-1"></i> @home.HomeLocation
                        </span>
                    </div>
                    <a asp-action="Details" asp-route-id="@home.Id" class="btn btn-hm align-self-start mt-2">View Details</a>
                </div>
                <div class="home-card-img-container ms-3">
                    <a href="#" data-bs-toggle="modal" data-bs-target="@("#imgModal" + index)">
                        <img src="@imagePath" alt="@home.HomeName" class="home-card-img fade-on-hover" />
                    </a>
                </div>
            </div>
        </div>
        <div class="modal fade" id="@("imgModal" + index)" tabindex="-1" aria-labelledby="@("imgModalLabel" + index)" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content bg-transparent border-0">
                    <div class="modal-body text-center p-0">
                        <img src="@imagePath" alt="@home.HomeName" style="max-width:100%;max-height:80vh;border-radius:12px;" />
                    </div>
                </div>
            </div>
        </div>
        index++;
    }
}
else
{
    <p>No homes available.</p>
}
