@model HomeManager.Data.Data.ViewModels.SearchResultsViewModel
@{
    ViewData["Title"] = "Search Results";
    var summary = !string.IsNullOrWhiteSpace(Model.Query) ? Model.Query : "All Estates";
    if (!string.IsNullOrWhiteSpace(Model.HomeType))
    {
        summary += $" | Type: {Model.HomeType}";
    }
    if (Model.MinPrice.HasValue)
    {
        summary += $" | Min Price: {Model.MinPrice.Value}";
    }
    if (Model.MaxPrice.HasValue)
    {
        summary += $" | Max Price: {Model.MaxPrice.Value}";
    }
}
<h2>Search Results for "@summary"</h2>

@if (Model.HomeResults.Any())
{
    <h3>Homes</h3>
    
        var index = 0;
    
    @foreach (var home in Model.HomeResults)
    {
        var imagePath = (home.Images != null && home.Images.Any())
            ? home.Images.First().FilePath
            : "/images/placeholder.png";
        <div class="card mb-3 home-card" style="min-height: 220px;">
            <div class="d-flex" style="height: 180px;">
                <div class="d-flex flex-column justify-content-between flex-grow-1 p-3">
                    <h5>@home.HomeName</h5>
                    <p>@home.HomeDescription</p>
                    @* <p>Location: @home.HomeLocation</p> *@
                    <div class="col-md-6 mb-2">
                        <span class="badge bg-primary"><i class="fa fa-map-marker-alt me-1"></i> @home.HomeLocation</span>
                    </div>
                    <div>
                    <span class="badge bg-warning text-dark fw-bold"><i class="fa fa-tag me-1"></i> @home.HomePrice.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("fr-FR"))</span>
                    </div>
                   @*  <p>@home.HomePrice</p> *@
                   <div>
                        <a asp-controller="Homes" asp-action="Details" asp-route-id="@home.Id" class="btn btn-hm align-self-start">View Details</a>
                   </div>
                    
                </div>
                <div class="home-card-img-container ms-3" style="height:100%">
                    <a href="#" data-bs-toggle="modal" data-bs-target="@("#imgModalSearch" + index)">
                        <img src="@imagePath" alt="@home.HomeName" class="home-card-img fade-on-hover" />
                    </a>
                </div>
            </div>
        </div>
        <div class="modal fade" id="@("imgModalSearch" + index)" tabindex="-1" aria-labelledby="@("imgModalLabelSearch" + index)" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content bg-transparent border-0">
                    <div class="modal-body text-center p-0">
                        <img src="@imagePath" alt="@home.HomeName" style="max-width:100%;max-height:80vh;border-radius:12px;" />
                    </div>
                </div>
            </div>
        </div>
        index++;
    }
}
@if (Model.UserResults.Any())
{
    <h3>Users</h3>
    <ul>
        @foreach (var user in Model.UserResults)
        {
            <li>
                <a asp-controller="Users" asp-action="Profile" asp-route-id="@user.Id">@user.Username</a>
            </li>
        }
    </ul>
}
@if (!Model.HomeResults.Any() && !Model.UserResults.Any())
{
    <p>No results found.</p>
}
